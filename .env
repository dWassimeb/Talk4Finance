# backend/.env.example
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///./data/powerbi_agent.db

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# PowerBI Configuration
POWERBI_DATASET_ID=your-powerbi-dataset-id
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id

# OpenAI Configuration
GPT_API_KEY=your-openai-api-key

# Email Configuration (SMTP)
# For Gmail/Google Workspace:
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password  # Use App Password, not regular password
FROM_EMAIL=noreply@yourdomain.com

# For Outlook/Office 365:
# SMTP_SERVER=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@outlook.com
# SMTP_PASSWORD=your-app-password

# For custom SMTP server:
# SMTP_SERVER=mail.yourdomain.com
# SMTP_PORT=587
# SMTP_USERNAME=noreply@yourdomain.com
# SMTP_PASSWORD=your-smtp-password

# Application Configuration
BASE_URL=http://castor.iagen-ov.fr  # Update for production
# For local development: BASE_URL=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=mohamed-ouassime.el-yamani@docaposte.fr

# Rate Limiting
REGISTRATION_RATE_LIMIT=5
LOGIN_RATE_LIMIT=10

# Production Settings
# ENVIRONMENT=production
# DEBUG=false

# Email Settings
USE_TLS=true
EMAIL_TEMPLATES_DIR=./email_templates